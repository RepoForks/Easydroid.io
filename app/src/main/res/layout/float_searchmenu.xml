<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
<RelativeLayout
    android:layout_gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_marginBottom="50dp"
    android:layout_width="match_parent"
    android:layout_height="165dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="@drawable/cornor_searchmenu">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/rightlayout"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp">
        <EditText
            android:id="@+id/searchmenu_searchingbody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:layout_marginTop="7dp"
            android:textColor="#f7f8f3" />
        <RadioGroup
            android:id="@+id/searchmenu_group"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/searchmenu_baidubutton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="baidu"
                android:checked="true"
                android:textAllCaps="false"
                />
            <RadioButton
                android:id="@+id/searchmenu_googlebutton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="google"
                android:textAllCaps="false"/>
            <RadioButton
                android:id="@+id/searchmenu_bingbutton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="bing"
                android:textAllCaps="false"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rightlayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <Button
            android:id="@+id/searchmenu_okbutton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/cornor_searchokbutton"
            android:text="ok"
            android:textColor="#f7f8f3"/>
    </LinearLayout>
</RelativeLayout>
</LinearLayout>